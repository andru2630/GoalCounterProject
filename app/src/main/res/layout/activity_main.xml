<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.goalcounter.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/team_a"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_dark"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/team_1_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/score_text"
                android:textSize="@dimen/text_dimension"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/text_dark"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:textColor="@color/text"
                android:background="@color/buttonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="goalForTeamI"
                android:text="@string/goal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/team_1_fouls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/score_text"
                android:textSize="@dimen/text_dimension2"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>
            <Button
                android:textColor="@color/text"
                android:background="@color/buttonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="foulForTeamI"
                android:text="@string/fouls"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                />
            <TextView
                android:id="@+id/team_1_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/score_text"
                android:textSize="@dimen/text_dimension2"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>
            <Button
                android:textColor="@color/text"
                android:background="@color/buttonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="cornerForTeamI"
                android:text="@string/corners"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@android:color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/team_b"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:fontFamily="san-serif-medium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/team_2_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/score_text"
                android:textSize="@dimen/text_dimension"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:background="@color/buttonBackground"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="goalForTeamII"
                android:text="@string/goal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/team_2_fouls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/score_text"
                android:textSize="@dimen/text_dimension2"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:textColor="@color/text"
                android:background="@color/buttonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="foulForTeamII"
                android:text="@string/fouls"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>
            <TextView
                android:id="@+id/team_2_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/score_text"
                android:textSize="@dimen/text_dimension2"
                android:textColor="@color/text_dark"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>
            <Button
                android:textColor="@color/text"
                android:background="@color/buttonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="cornerForTeamII"
                android:text="@string/corners"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:textColor="@color/text"
        android:background="@color/resetButtonBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="resetScore"
        android:text="@string/reset"
        android:textAllCaps="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
